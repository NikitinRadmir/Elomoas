@section Scripts {
    <script src="~/lib/microsoft/signalr/dist/browser/signalr.min.js"></script>
    <script>
        let allFriends = []; // Храним полный список друзей
        let currentChatId = null;
        let currentFriendId = null;
        let currentUserId = null;
        let connection = null;
        let allChats = []; // Храним все чаты

        $(document).ready(function() {
            // Инициализация SignalR
            connection = new signalR.HubConnectionBuilder()
                .withUrl("/chatHub")
                .build();

            connection.on("ReceiveMessage", function (message) {
                if (message.chatId === currentChatId) {
                    displayMessage(message, false);
                }
                updateChatsList();
            });

            connection.on("MessageSent", function (message) {
                if (message.chatId === currentChatId) {
                    displayMessage(message, true);
                }
                updateChatsList();
            });

            connection.start()
                .then(function () {
                    console.log("SignalR Connected.");
                    updateChatsList(); // Загружаем список чатов при подключении
                })
                .catch(function (err) {
                    console.error(err.toString());
                });

            // Закрытие модального окна при клике вне его содержимого
            $('#friendsModal').click(function(e) {
                if (e.target.id === 'friendsModal') {
                    hideFriendsModal();
                }
            });

            // Улучшенный поиск по друзьям
            let searchTimeout;
            $('#friendSearchInput').on('input', function() {
                clearTimeout(searchTimeout);
                const searchText = $(this).val().toLowerCase();
                
                searchTimeout = setTimeout(() => {
                    filterFriends(searchText);
                }, 300);
            });

            // Добавляем обработчик поиска чатов
            $('.search-form input').on('input', function() {
                const searchText = $(this).val().toLowerCase();
                filterChats(searchText);
            });
        });

        function sendMessage(event) {
            event.preventDefault();
            
            const messageInput = $('#messageInput');
            const content = messageInput.val().trim();
            
            if (!content || !currentFriendId) {
                console.log('Missing data:', { content, currentFriendId });
                return;
            }

            if (!currentChatId) {
                // Если чата еще нет, отправляем первое сообщение через обычный AJAX запрос
                const data = {
                    recipientId: currentFriendId,
                    content: content
                };
                
                console.log('Sending first message:', data);
                
                $.ajax({
                    url: '/Messanger/SendMessage',
                    method: 'POST',
                    contentType: 'application/json',
                    data: JSON.stringify(data),
                    headers: {
                        'RequestVerificationToken': $('input[name="__RequestVerificationToken"]').val()
                    },
                    success: function(response) {
                        console.log('First message response:', response);
                        if (response && response.success && response.chatId) {
                            currentChatId = response.chatId;
                            currentUserId = response.currentUserId;

                            // Отображаем отправленное сообщение
                            if (response.message) {
                                displayMessage(response.message, true);
                            } else {
                                displayMessage({
                                    content: content,
                                    senderId: currentUserId,
                                    createdDate: new Date()
                                }, true);
                            }

                            // Подключаемся к чату через SignalR
                            connection.invoke("JoinChat", currentChatId.toString())
                                .catch(function (err) {
                                    console.error('Error joining chat:', err);
                                    showError('Error joining chat. Please refresh the page.');
                                });

                            messageInput.val('');
                            updateChatsList();
                            scrollToBottom();
                        } else {
                            console.error('Invalid response format:', response);
                            showError('Failed to send message. Please try again.');
                        }
                    },
                    error: function(jqXHR, textStatus, errorThrown) {
                        console.error('Error sending first message:', {
                            status: jqXHR.status,
                            textStatus: textStatus,
                            error: errorThrown,
                            response: jqXHR.responseText
                        });
                        showError('Failed to send message. Please try again.');
                    }
                });
            } else {
                // Если чат уже существует, отправляем через SignalR
                console.log('Sending message via SignalR:', {
                    friendId: currentFriendId,
                    content: content,
                    chatId: currentChatId
                });
                
                connection.invoke("SendMessage", currentFriendId, content)
                    .then(function() {
                        messageInput.val('');
                    })
                    .catch(function (err) {
                        console.error('Error sending message via SignalR:', err);
                        alert('Failed to send message. Please try again.');
                    });
            }
        }

        function showError(message) {
            // Показываем ошибку пользователю
            const errorDiv = $('#messageError');
            if (errorDiv.length === 0) {
                const newErrorDiv = $('<div id="messageError" class="alert alert-danger mt-2" style="display: none;"></div>');
                $('.message-input-wrapper').after(newErrorDiv);
            }
            $('#messageError').text(message).fadeIn().delay(3000).fadeOut();
        }

        function formatDate(date) {
            const now = new Date();
            const messageDate = new Date(date);
            
            // Get days difference
            const diffTime = now - messageDate;
            const diffDays = Math.floor(diffTime / (1000 * 60 * 60 * 24));
            
            // Check if date is in current week
            const startOfWeek = new Date(now);
            startOfWeek.setDate(now.getDate() - now.getDay()); // Start of current week (Sunday)
            
            if (messageDate.toDateString() === now.toDateString()) {
                return 'Today';
            }
            
            const yesterday = new Date(now);
            yesterday.setDate(yesterday.getDate() - 1);
            if (messageDate.toDateString() === yesterday.toDateString()) {
                return 'Yesterday';
            }
            
            // If message is within current week
            if (messageDate >= startOfWeek) {
                return `${messageDate.toLocaleDateString('en-US', {
                    weekday: 'long' // Day name
                })}, ${messageDate.toLocaleDateString('en-US', {
                    month: 'short',
                    day: 'numeric'
                })}`;
            }
            
            // If message is in current year
            if (messageDate.getFullYear() === now.getFullYear()) {
                return messageDate.toLocaleDateString('en-US', {
                    month: 'long',
                    day: 'numeric'
                });
            }
            
            // For older messages
            return messageDate.toLocaleDateString('en-US', {
                month: 'long',
                day: 'numeric',
                year: 'numeric'
            });
        }

        function displayMessage(message, isSent) {
            const messageDate = new Date(message.createdDate || new Date());
            const messageTime = messageDate.toLocaleTimeString([], { hour: '2-digit', minute: '2-digit' });
            const dateDivId = `date-${messageDate.toDateString()}`;

            // Проверяем, нужно ли добавить разделитель даты
            if (!document.getElementById(dateDivId)) {
                const dateHtml = `
                    <div id="${dateDivId}" class="message-date-divider">
                        <span class="message-date-text">${formatDate(messageDate)}</span>
                    </div>
                `;
                $('#messagesContainer').append(dateHtml);
            }

            const messageHtml = `
                <div class="message-item ${isSent ? 'outgoing-message' : 'incoming-message'}">
                    <div class="message-content">
                        <p>${message.content}</p>
                        <small class="message-time">${messageTime}</small>
                    </div>
                </div>
            `;
            
            $('#messagesContainer').append(messageHtml);
            scrollToBottom();
        }

        function scrollToBottom() {
            const container = $('#messagesContainer');
            container.scrollTop(container[0].scrollHeight);
        }

        function filterFriends(searchText) {
            const filteredFriends = allFriends.filter(friend => 
                friend.name.toLowerCase().includes(searchText) || 
                friend.email.toLowerCase().includes(searchText)
            );
            
            displayFriends(filteredFriends);
        }

        function displayFriends(friends) {
            const friendsList = $('.friends-list');
            const noResults = $('.no-results');
            friendsList.empty();
            
            if (friends.length === 0) {
                noResults.show();
                return;
            }
            
            noResults.hide();
            friends.forEach(friend => {
                const friendHtml = `
                    <div class="friend-item d-flex align-items-center justify-content-between p-2 border-bottom">
                        <div class="d-flex align-items-center">
                            <img src="${friend.img || '/images/default-icon.jpg'}" 
                                 alt="${friend.name}" 
                                 class="rounded-circle mr-2" 
                                 style="width: 40px; height: 40px; object-fit: cover;">
                            <div>
                                <h6 class="mb-0 friend-name">${friend.name}</h6>
                                <small class="text-muted">${friend.email}</small>
                            </div>
                        </div>
                        <button class="btn btn-primary btn-sm" onclick="startChat('${friend.identityId}', '${friend.name}', '${friend.img || '/images/default-icon.jpg'}', '${friend.email}', true)">
                            Message
                        </button>
                    </div>
                `;
                friendsList.append(friendHtml);
            });
        }

        function showFriendsModal() {
            $('#friendsModal').fadeIn(300);
            $('#friendSearchInput').val(''); // Очищаем поле поиска
            loadFriends();
        }

        function hideFriendsModal() {
            $('#friendsModal').fadeOut(300);
            $('.no-results').hide();
        }

        function loadFriends() {
            $.get('/Messanger/GetFriends', function(friends) {
                allFriends = friends; // Сохраняем полный список
                displayFriends(friends);
            });
        }

        function startChat(friendId, friendName, friendImg, friendEmail, isNewChat = false) {
            currentFriendId = friendId;
            
            // Показываем чат
            $('.col-lg-6.col-xl-8').removeClass('d-none');
            
            // Обновляем шапку чата
            const headerImg = $('.chat-header img');
            headerImg.attr('src', friendImg || '/images/default-icon.jpg');
            headerImg.attr('alt', friendName);
            $('.chat-header h6').text(friendName);
            $('.chat-header span').text(friendEmail);
            
            // Скрываем модальное окно
            hideFriendsModal();
            
            // Очищаем сообщения
            $('#messagesContainer').empty();

            if (isNewChat) {
                // Если это новый чат (из модального окна), просто подготавливаем интерфейс
                currentChatId = null;
                // Фокусируемся на поле ввода
                $('#messageInput').focus();
            } else {
                // Если это существующий чат из списка, загружаем сообщения
                $.get(`/Messanger/GetChatMessages?friendId=${friendId}`)
                    .done(function(data) {
                        if (data && data.chatId) {
                            currentChatId = data.chatId;
                            currentUserId = data.currentUserId;
                            
                            if (data.messages && Array.isArray(data.messages)) {
                                const sortedMessages = data.messages.sort((a, b) => 
                                    new Date(a.createdDate) - new Date(b.createdDate)
                                );
                                
                                sortedMessages.forEach(message => {
                                    displayMessage(message, message.senderId === currentUserId);
                                });
                                scrollToBottom();
                            }
                            
                            connection.invoke("JoinChat", currentChatId.toString())
                                .then(() => {
                                    return connection.invoke("MarkAsRead", currentChatId.toString());
                                })
                                .then(() => {
                                    updateChatsList();
                                })
                                .catch(function (err) {
                                    console.error(err.toString());
                                });
                        }
                    })
                    .fail(function(error) {
                        console.error('Error loading messages:', error);
                    });
            }
        }

        function updateChatsList() {
            $.get('/Messanger/GetUserChats')
                .done(function(chats) {
                    allChats = chats; // Сохраняем все чаты
                    displayChats(chats);
                })
                .fail(function(error) {
                    console.error('Error updating chats list:', error);
                });
        }

        // Добавляем функцию фильтрации чатов
        function filterChats(searchText) {
            if (!allChats || !Array.isArray(allChats)) return;

            const chatList = $('.list-group');
            chatList.empty();

            const filteredChats = allChats.filter(chat => 
                chat.userName.toLowerCase().includes(searchText) || 
                (chat.lastMessage && chat.lastMessage.toLowerCase().includes(searchText))
            );

            displayChats(filteredChats);
        }

        function displayChats(chats) {
            const chatList = $('.list-group');
            const noChatsFound = $('.no-chats-found');
            chatList.empty();

            if (!chats || !Array.isArray(chats) || chats.length === 0) {
                noChatsFound.show();
                return;
            }

            noChatsFound.hide();
            chats.forEach(chat => {
                const lastMessageTime = chat.lastMessageTime 
                    ? new Date(chat.lastMessageTime).toLocaleTimeString([], { hour: '2-digit', minute: '2-digit' }) 
                    : '';
                
                const unreadBadge = chat.unreadCount > 0 && chat.chatId !== currentChatId
                    ? `<div class="badge badge-primary badge-pill">${chat.unreadCount}</div>` 
                    : '';

                const chatHtml = `
                    <li class="list-group-item chat-item ${chat.chatId === currentChatId ? 'active' : ''}" 
                        onclick="startChat('${chat.userId}', '${chat.userName}', '${chat.userImage || '/images/default-icon.jpg'}', '${chat.userEmail}', false)">
                        <div class="d-flex align-items-center">
                            <div class="avatar mr-3">
                                <img src="${chat.userImage || '/images/default-icon.jpg'}" 
                                    alt="${chat.userName}" 
                                    class="rounded-circle"
                                    style="width: 45px; height: 45px; object-fit: cover;">
                            </div>
                            <div class="chat-info flex-grow-1">
                                <h6 class="mb-1">${chat.userName}</h6>
                                <p class="mb-0 text-muted">${chat.lastMessage || ''}</p>
                            </div>
                            <div class="chat-meta">
                                <div class="last-message-time text-muted small">${lastMessageTime}</div>
                                ${unreadBadge}
                            </div>
                        </div>
                    </li>
                `;
                chatList.append(chatHtml);
            });
        }
    </script>
}  