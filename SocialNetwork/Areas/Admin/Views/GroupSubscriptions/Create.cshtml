@model SocialNetwork.Areas.Admin.Models.CreateGroupSubscriptionViewModel

@{
    ViewData["Title"] = "Create Group Subscription";
}

<div class="container-fluid">
    <h1 class="h3 mb-2 text-gray-800">Create Group Subscription</h1>
    <p class="mb-4">Create a new group subscription here.</p>

    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">New Group Subscription</h6>
        </div>
        <div class="card-body">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="UserId" class="control-label">User</label>
                    <select asp-for="UserId" class="form-control" asp-items="ViewBag.Users">
                        <option value="">-- Select User --</option>
                    </select>
                    <span asp-validation-for="UserId" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="GroupId" class="control-label">Group</label>
                    <select asp-for="GroupId" class="form-control" asp-items="ViewBag.Groups">
                        <option value="">-- Select Group --</option>
                    </select>
                    <span asp-validation-for="GroupId" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 