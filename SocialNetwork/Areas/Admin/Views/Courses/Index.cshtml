@model SocialNetwork.Areas.Admin.Models.CoursesViewModel

@{
    ViewData["Title"] = "Courses";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-sm-12">
            <div class="card">
                <div class="card-header">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <h2>Course Managing</h2>
                        <a asp-action="Create" class="btn btn-primary">
                            <i data-feather="plus"></i> Add New Course
                        </a>
                    </div>
                    <div class="search-wrapper">
                        <div class="input-group">
                            <span class="input-group-text bg-primary">
                                <i data-feather="search" class="text-white"></i>
                            </span>
                            <input type="text" 
                                   id="searchInput" 
                                   class="form-control form-control-lg" 
                                   placeholder="Search by name, description, or programming language..." />
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    @if (TempData["Success"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            @TempData["Success"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }
                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            @TempData["Error"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Name</th>
                                    <th style="min-width: 400px;">Description</th>
                                    <th>Image</th>
                                    <th>Image URL</th>
                                    <th>Price</th>
                                    <th>Language</th>
                                    <th>Video</th>
                                    <th style="min-width: 250px;">Learn</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody id="coursesTableBody">
                                @foreach (var course in Model.Courses)
                                {
                                    <tr class="course-row">
                                        <td class="course-id">@course.Id</td>
                                        <td class="course-name">@course.Name</td>
                                        <td class="course-description text-wrap">@course.Description</td>
                                        <td>
                                            @if (!string.IsNullOrEmpty(course.Img))
                                            {
                                                <img src="@course.Img" alt="@course.Name" style="max-width: 50px;" />
                                            }
                                        </td>
                                        <td class="course-img">@course.Img</td>
                                        <td class="course-price">$@course.Price.ToString("F2")</td>
                                        <td class="course-language">@course.PL</td>
                                        <td class="course-video">
                                            @if (course.Video?.Length > 30)
                                            {
                                                @(course.Video.Substring(0, 30) + "...")
                                            }
                                            else
                                            {
                                                @course.Video
                                            }
                                        </td>
                                        <td class="course-learn text-wrap">@course.Learn</td>
                                        <td>
                                            <div class="btn-group" role="group">
                                                <a asp-action="Edit" asp-route-id="@course.Id" class="btn btn-primary">
                                                    <i data-feather="edit"></i>
                                                </a>
                                                <button type="button" class="btn btn-danger" onclick="confirmDelete(@course.Id)">
                                                    <i data-feather="trash-2"></i>
                                                </button>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteModalLabel">Confirm Delete</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Are you sure you want to delete this course?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <form id="deleteForm" asp-action="Delete" method="post">
                    <input type="hidden" id="courseId" name="id" />
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            feather.replace();

            $("#searchInput").on("keyup", function() {
                var value = $(this).val().toLowerCase();
                $("#coursesTableBody tr").filter(function() {
                    var id = $(this).find(".course-id").text().toLowerCase();
                    var name = $(this).find(".course-name").text().toLowerCase();
                    var description = $(this).find(".course-description").text().toLowerCase();
                    var price = $(this).find(".course-price").text().toLowerCase();
                    var language = $(this).find(".course-language").text().toLowerCase();
                    var learn = $(this).find(".course-learn").text().toLowerCase();
                    
                    var matches = id.includes(value) ||
                        name.includes(value) ||
                        description.includes(value) ||
                        price.includes(value) ||
                        language.includes(value) ||
                        learn.includes(value);
                        
                    $(this).toggle(matches);
                });
            });
        });

        function confirmDelete(id) {
            document.getElementById('courseId').value = id;
            var deleteModal = new bootstrap.Modal(document.getElementById('deleteModal'));
            deleteModal.show();
        }
    </script>

    <style>
        .search-wrapper {
            max-width: 600px;
            margin: 0 auto;
        }

        .search-wrapper .input-group-text {
            border: none;
            padding: 0.75rem 1.25rem;
        }

        .search-wrapper .form-control {
            border: 1px solid #dee2e6;
            padding: 0.75rem 1.25rem;
            font-size: 1rem;
            border-left: none;
        }

        .search-wrapper .form-control:focus {
            box-shadow: none;
            border-color: #dee2e6;
        }

        .search-wrapper .input-group-text i {
            width: 20px;
            height: 20px;
        }

        .card-header {
            padding: 1.5rem;
        }
    </style>
} 