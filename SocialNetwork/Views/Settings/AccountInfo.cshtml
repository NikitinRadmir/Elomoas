@using Elomoas.Helpers
@using Microsoft.AspNetCore.Mvc.Localization
@using System.Globalization
@inject IViewLocalizer Localizer
@model Elomoas.mvc.Models.Settings.AccountInfoVM

@{
    ViewData["Title"] = @Localizer["AccountInfo"];
}

<style>
    .profile-image-container {
        width: 150px;
        height: 150px;
        margin: 0 auto;
        position: relative;
        overflow: hidden;
        border-radius: 50%;
        border: 3px solid #fff;
        box-shadow: 0 0 15px rgba(0,0,0,0.1);
    }

    .profile-image {
        width: 100%;
        height: 100%;
        object-fit: cover;
        border-radius: 50%;
        transition: all 0.3s ease;
    }

    .profile-image:hover {
        transform: scale(1.05);
    }

    .change-photo-btn {
        background-color: rgba(255,255,255,0.9);
        border: 2px solid #007bff;
        transition: all 0.3s ease;
    }

    .change-photo-btn:hover {
        background-color: #007bff;
        color: white !important;
    }
</style>

<div class="middle-sidebar-bottom bg-lightblue theme-dark-bg">
    <div class="middle-sidebar-left">
        <div class="middle-wrap">
            <div class="card w-100 border-0 bg-white shadow-xs p-0 mb-4">
                <div class="card-body p-4 w-100 bg-current border-0 d-flex rounded-lg">
                    <a asp-controller="Settings" asp-action="Settings" class="d-inline-block mt-2"><i class="ti-arrow-left font-sm text-white"></i></a>
                    <h4 class="font-xs text-white fw-600 ml-4 mb-0 mt-2">@Localizer["ProfileInformation"]</h4>
                </div>
                <div class="card-body p-lg-5 p-4 w-100 border-0">
                    @if (!string.IsNullOrEmpty(TempData["SuccessMessage"]?.ToString()))
                    {
                        <div class="alert alert-success">
                            @TempData["SuccessMessage"]
                        </div>
                    }

                    @if (!ViewContext.ModelState.IsValid)
                    {
                        <div class="alert alert-danger">
                            <div asp-validation-summary="All" class="text-danger"></div>
                        </div>
                    }

                    <form method="post" asp-controller="Settings" asp-action="AccountInfo" enctype="multipart/form-data">
                        <div class="row justify-content-center">
                            <div class="col-lg-4 text-center">
                                <div class="profile-image-container">
                                    <img src="@(string.IsNullOrEmpty(Model.Img) ? "/images/user-12.png" : Model.Img)" 
                                         alt="profile" 
                                         class="profile-image" 
                                         id="preview-image">
                                </div>
                                <div class="clearfix"></div>
                                <div class="form-group mt-3">
                                    <label for="ImageFile" class="p-3 d-block text-primary font-xsss fw-600 rounded-lg text-center cursor-pointer change-photo-btn">
                                        <i class="feather-camera mr-2"></i>@Localizer["ChangePhoto"]
                                    </label>
                                    <input type="file" asp-for="ImageFile" class="d-none" accept="image/*" onchange="previewImage(this)">
                                    <span asp-validation-for="ImageFile" class="text-danger"></span>
                                </div>
                                <h2 class="fw-700 font-sm text-grey-900 mt-3">@Model.FirstName @Model.LastName</h2>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-lg-6 mb-3">
                                <div class="form-group">
                                    <label class="mont-font fw-600 font-xssss">@Localizer["FirstName"]</label>
                                    <input type="text" asp-for="FirstName" class="form-control">
                                    <span asp-validation-for="FirstName" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="col-lg-6 mb-3">
                                <div class="form-group">
                                    <label class="mont-font fw-600 font-xssss">@Localizer["LastName"]</label>
                                    <input type="text" asp-for="LastName" class="form-control">
                                    <span asp-validation-for="LastName" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-lg-12 mb-3">
                                <div class="form-group">
                                    <label class="mont-font fw-600 font-xssss">@Localizer["Email"]</label>
                                    <input type="email" asp-for="Email" class="form-control">
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-lg-12 mb-3">
                                <div class="form-group">
                                    <label class="mont-font fw-600 font-xssss">@Localizer["Description"]</label>
                                    <textarea asp-for="Description" class="form-control mb-0 p-3 h100 bg-greylight lh-16" rows="5" placeholder="@Localizer["Tellusaboutyourself"]"></textarea>
                                    <span asp-validation-for="Description" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-lg-12 mb-0">
                                <button type="submit" class="bg-current text-center text-white font-xsss fw-600 p-3 w175 rounded-lg d-inline-block">@Localizer["Save"]</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        function previewImage(input) {
            if (input.files && input.files[0]) {
                var reader = new FileReader();
                reader.onload = function(e) {
                    document.getElementById('preview-image').src = e.target.result;
                }
                reader.readAsDataURL(input.files[0]);
            }
        }
    </script>
} 