@using Elomoas.mvc.Models.Users;
@model UserVM;

@{
    ViewData["Title"] = "Users";
}

<div class="middle-sidebar-bottom">
    <div class="middle-sidebar-left">
        <div class="row">
            
                @foreach (var user in Model.Users) {
                    <div class="col-xl-4 col-lg-6 col-md-6 col-sm-6">
                        <div class="card mb-4 d-block w-100 shadow-xss rounded-lg p-4 border-0 text-center">
                            <a asp-controller="Users" asp-action="UserPage" class="ml-auto mr-auto rounded-lg overflow-hidden d-inline-block">
                                <img src="@user.Img" alt="icon" class="p-0 w100 shadow-xss">
                            </a>
                            <h4 class="fw-700 font-xs mt-3 mb-1">@user.Name <i class="ti-check font-xssss btn-round-xs bg-success text-white ml-1"></i></h4>
                            <p class="fw-600 font-xssss text-grey-500 mt-0 mb-2">@user.Email</p>
                            <div class="clearfix"></div>
                            <a asp-controller="Users" asp-action="UserPage" class="mt-3 p-0 btn p-2 lh-24 w100 ml-1 ls-3 d-inline-block rounded-xl bg-current font-xsssss fw-700 ls-lg text-white">PROFILE</a>
                        </div>
                    </div> 
                }
            
        </div>
    </div>
</div> 