@using Elomoas.Helpers
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>@ViewData["Title"] - Elomoas</title>

    <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/toastr/toastr.min.css" />
    <link rel="stylesheet" href="~/css/themify-icons.css" asp-append-version="true">
    <link rel="stylesheet" href="~/css/feather.css" asp-append-version="true">
    <link rel="stylesheet" href="~/css/style.css" asp-append-version="true">
    <link rel="stylesheet" href="~/css/video-player.css" asp-append-version="true">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    
    <!-- Favicon icon -->
    <link rel="icon" type="image/png" sizes="16x16" href="~/images/favicon.png">
    
    @RenderSection("Styles", required: false)
</head>

<body class="color-theme-blue mont-font">
    <div class="preloader"></div>

    <div class="main-wrapper">
        <!-- navigation -->
        <nav class="navigation scroll-bar">
            <div class="container pl-0 pr-0">
                <div class="nav-content">
                    <div class="nav-top">
                        <a asp-controller="Home" asp-action="Feed">
                            <i class="feather-slack text-success display1-size mr-3 ml-3"></i>
                            <span class="d-inline-block fredoka-font ls-3 fw-600 text-current font-xl logo-text mb-0">Elomoas.</span>
                        </a>
                        <a href="#" class="close-nav d-inline-block d-lg-none"><i class="ti-close bg-grey mb-4 btn-round-sm font-xssss fw-700 text-dark ml-auto mr-2"></i></a>
                    </div>
                    <div class="nav-caption fw-600 font-xssss text-grey-500"><span>New </span>Feeds</div>
                    <ul class="mb-3">
                        <li class="logo d-none d-xl-block d-lg-block"></li>
                        @Html.SidebarLink("Home", "Feed", "Course Feed", "feather-tv", "chats")
                        @Html.SidebarLink("Users", "Users", "Users", "feather-shopping-bag", "friends")
                        @Html.SidebarLink("Groups", "Groups", "Explore Channel", "feather-globe", "favorites")
                        <li class="flex-lg-brackets">
                            @Html.SidebarLink("Users", "MyProfile", "My Courses", "feather-video", "archived")
                        </li>
                    </ul>
                    <div class="nav-caption fw-600 font-xssss text-grey-500"><span></span> Account</div>
                    <ul class="mb-3">
                        <li class="logo d-none d-xl-block d-lg-block"></li>
                        <li><a asp-controller="Settings" asp-action="Settings" class="nav-content-bttn open-font h-auto pt-2 pb-2"><i class="font-sm feather-settings mr-3 text-grey-500"></i><span>Settings</span></a></li>
                        <li><a asp-controller="Messanger" asp-action="Messanger" class="nav-content-bttn open-font h-auto pt-2 pb-2"><i class="font-sm feather-message-square mr-3 text-grey-500"></i><span>Chat</span></a></li>
                    </ul>
                </div>
            </div>
        </nav>
        <!-- navigation -->

        <!-- main content -->
        <div class="main-content">
            <div class="middle-sidebar-header bg-white">
                <button class="header-menu"></button>
                <form action="#" class="float-left header-search">
                    <div class="form-group mb-0 icon-input">
                        <i class="feather-search font-lg text-grey-400"></i>
                        <input type="text" placeholder="Start typing to search.." class="bg-transparent border-0 lh-32 pt-2 pb-2 pl-5 pr-3 font-xsss fw-500 rounded-xl w350">
                    </div>
                </form>
                <ul class="d-flex ml-auto right-menu-icon">
                    <li><a href="#"><i class="feather-message-square font-xl text-current"></i></a></li>
                    <li><a href="#"><i class="feather-settings animation-spin d-inline-block font-xl text-current"></i></a></li>
                    <li><a href="#"><img src="~/images/female-profile.png" alt="user" class="w40 mt--1"></a></li>
                    <li><a href="#" class="menu-search-icon"><i class="feather-search text-grey-900 font-lg"></i></a></li>
                </ul>
            </div>

            <!-- Контейнер для уведомлений -->
            <div id="notificationContainer" class="notification-container"></div>

            @RenderBody()
        </div>
        <!-- main content -->

        <div class="app-footer border-0 shadow-lg">
            <a href="#" class="nav-content-bttn nav-center"><i class="feather-home"></i></a>
            <a href="#" class="nav-content-bttn"><i class="feather-package"></i></a>
            <a href="#" class="nav-content-bttn" data-tab="chats"><i class="feather-layout"></i></a>
            <a href="#" class="nav-content-bttn sidebar-layer"><i class="feather-layers"></i></a>
            <a href="#" class="nav-content-bttn"><img src="~/images/female-profile.png" alt="user" class="w30 shadow-xss"></a>
        </div>
    </div>

    <!-- Core Scripts -->
    <script src="~/lib/jquery/jquery.min.js"></script>
    <script src="~/lib/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/microsoft/signalr/dist/browser/signalr.min.js"></script>
    <script src="~/lib/toastr/toastr.min.js"></script>
    
    <!-- Custom Scripts -->
    <script src="~/js/plugin.js"></script>
    <script src="~/js/scripts.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script>
        // Инициализация toastr
        toastr.options = {
            "closeButton": true,
            "debug": false,
            "newestOnTop": true,
            "progressBar": true,
            "positionClass": "toast-top-right",
            "preventDuplicates": false,
            "onclick": null,
            "showDuration": "300",
            "hideDuration": "1000",
            "timeOut": "5000",
            "extendedTimeOut": "1000",
            "showEasing": "swing",
            "hideEasing": "linear",
            "showMethod": "fadeIn",
            "hideMethod": "fadeOut"
        };
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>