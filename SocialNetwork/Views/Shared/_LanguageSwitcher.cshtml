@using System.Globalization
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

<div class="language-switcher ml-auto mr-3">
    <div class="lang-buttons">
        @{
            var currentCulture = CultureInfo.CurrentUICulture.TwoLetterISOLanguageName;
            var returnUrl = Context.Request.Path + Context.Request.QueryString;
        }
        <form asp-controller="Language" asp-action="SetLanguage" method="post" style="display: inline;">
            <input type="hidden" name="culture" value="en" />
            <input type="hidden" name="returnUrl" value="@returnUrl" />
            <button type="submit" class="lang-btn @(currentCulture == "en" ? "active" : "")">EN</button>
        </form>
        <form asp-controller="Language" asp-action="SetLanguage" method="post" style="display: inline;">
            <input type="hidden" name="culture" value="ru" />
            <input type="hidden" name="returnUrl" value="@returnUrl" />
            <button type="submit" class="lang-btn @(currentCulture == "ru" ? "active" : "")">RU</button>
        </form>
    </div>
</div>

<style>
    .language-switcher {
        display: flex;
        align-items: center;
        margin: 0 15px;
    }

    .lang-buttons {
        display: flex;
        background: #e4e6eb;
        padding: 3px;
        border-radius: 10px;
        box-shadow: 0 2px 5px rgba(0,0,0,0.05);
    }

    .lang-btn {
        border: none;
        padding: 8px 16px;
        font-size: 15px;
        font-weight: 600;
        color: #65676b;
        background: transparent;
        border-radius: 8px;
        cursor: pointer;
        transition: all 0.25s ease;
        min-width: 45px;
        text-align: center;
    }

    .lang-btn.active {
        background: #2563eb;
        color: #ffffff;
        box-shadow: 0 2px 8px rgba(37, 99, 235, 0.35);
        transform: translateY(-1px);
    }

    .lang-btn:not(.active):hover {
        background: rgba(37, 99, 235, 0.1);
        color: #2563eb;
    }

    @@media (max-width: 768px) {
        .lang-buttons {
            padding: 2px;
        }
        .lang-btn {
            padding: 6px 12px;
            font-size: 14px;
            min-width: 40px;
        }
    }
</style> 