@using Elomoas.Helpers
@using Microsoft.AspNetCore.Mvc.Localization
@using System.Globalization
@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = "Page Not Found";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6 text-center">
            <div class="error-template">
                <h1 class="display-1">404</h1>
                <h2>@Localizer["PageNotFound"]</h2>
                <div class="error-details mb-4">
                    @Localizer["Sorrythepageyourequestedcouldnotbefound"]
                </div>
                <div class="error-actions">
                    <a asp-controller="Home" asp-action="Feed" class="btn btn-primary">
                        <i class="feather-home"></i> @Localizer["BacktoHome"]
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .error-template {
            padding: 40px 15px;
            text-align: center;
        }
        .error-actions {
            margin-top: 15px;
            margin-bottom: 15px;
        }
    </style>
} 