    <!-- Core Scripts -->
    <script src="~/lib/jquery/jquery.min.js"></script>
    <script src="~/lib/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/microsoft/signalr/dist/browser/signalr.min.js"></script>
    <script src="~/lib/toastr/toastr.min.js"></script>
    
    <!-- Custom Scripts -->
    <script src="~/js/plugin.js"></script>
    <script src="~/js/scripts.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script>
        // Инициализация toastr
        toastr.options = {
            "closeButton": true,
            "debug": false,
            "newestOnTop": true,
            "progressBar": true,
            "positionClass": "toast-top-right",
            "preventDuplicates": false,
            "onclick": null,
            "showDuration": "300",
            "hideDuration": "1000",
            "timeOut": "5000",
            "extendedTimeOut": "1000",
            "showEasing": "swing",
            "hideEasing": "linear",
            "showMethod": "fadeIn",
            "hideMethod": "fadeOut"
        };

        // Инициализация SignalR
        const connection = new signalR.HubConnectionBuilder()
            .withUrl("/friendshipHub")
            .withAutomaticReconnect()
            .build();

        connection.on("ReceiveFriendRequest", function (data) {
            toastr.info('Вы получили новый запрос в друзья');
        });

        connection.on("FriendRequestAccepted", function (data) {
            toastr.success('Ваш запрос в друзья был принят');
        });

        connection.on("FriendRequestRejected", function (data) {
            toastr.warning('Ваш запрос в друзья был отклонен');
        });

        connection.on("FriendRemoved", function (data) {
            toastr.warning('Пользователь удалил вас из друзей');
        });

        // Запуск соединения
        connection.start()
            .then(function () {
                // После успешного подключения добавляем пользователя в группу
                if (connection.connectionStarted) {
                    const userId = '@User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value';
                    if (userId) {
                        connection.invoke("AddToGroup", userId).catch(function (err) {
                            console.error(err);
                        });
                    }
                }
            })
            .catch(function (err) {
                console.error(err);
            });
    </script>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>