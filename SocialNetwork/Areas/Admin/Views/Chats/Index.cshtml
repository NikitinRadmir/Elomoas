@model SocialNetwork.Areas.Admin.Models.ChatsViewModel

@{
    ViewData["Title"] = "Chats";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-sm-12">
            <div class="card">
                <div class="card-header">
                    <h2>Chats Managing</h2>
                </div>
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <div class="input-group" style="max-width: 600px;">
                            <span class="input-group-text bg-primary">
                                <i class="fas fa-search text-white"></i>
                            </span>
                            <input type="text" 
                                   id="searchInput" 
                                   class="form-control form-control-lg" 
                                   placeholder="Search by ID or users..." />
                        </div>
                        <div class="btn-group">
                            <a asp-action="Create" class="btn btn-primary">Create New</a>
                        </div>
                    </div>
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>User 1</th>
                                    <th>User 2</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var chat in Model.Chats)
                                {
                                    <tr class="chat-row">
                                        <td class="chat-id">@chat.Id</td>
                                        <td class="chat-user1">@chat.User1Id</td>
                                        <td class="chat-user2">@chat.User2Id</td>
                                        <td>
                                            <div class="btn-group">
                                                <a asp-action="Edit" asp-route-id="@chat.Id" class="btn btn-primary btn-sm">Edit</a>
                                                <a asp-action="Details" asp-route-id="@chat.Id" class="btn btn-info btn-sm">Details</a>
                                                <form asp-action="Delete" asp-route-id="@chat.Id" method="post" class="d-inline">
                                                    <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this chat?');">Delete</button>
                                                </form>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $("#searchInput").on("keyup", function() {
                var value = $(this).val().toLowerCase();
                $(".chat-row").filter(function() {
                    var id = $(this).find(".chat-id").text().toLowerCase();
                    var user1 = $(this).find(".chat-user1").text().toLowerCase();
                    var user2 = $(this).find(".chat-user2").text().toLowerCase();
                    $(this).toggle(
                        id.indexOf(value) > -1 || 
                        user1.indexOf(value) > -1 || 
                        user2.indexOf(value) > -1
                    );
                });
            });
        });
    </script>
} 