@model SocialNetwork.Areas.Admin.Models.CreateFriendshipViewModel
@{
    ViewData["Title"] = "Create Friendship";
}

<div class="container-fluid">
    <h1 class="h3 mb-2 text-gray-800">Create Friendship</h1>
    <p class="mb-4">Create a new friendship between users</p>

    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">New Friendship</h6>
        </div>
        <div class="card-body">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="UserId">User</label>
                    <select asp-for="UserId" class="form-control" asp-items="ViewBag.Users">
                        <option value="">-- Select User --</option>
                    </select>
                    <span asp-validation-for="UserId" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="FriendId">Friend</label>
                    <select asp-for="FriendId" class="form-control" asp-items="ViewBag.Users">
                        <option value="">-- Select Friend --</option>
                    </select>
                    <span asp-validation-for="FriendId" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Status">Status</label>
                    <select asp-for="Status" class="form-control" asp-items="Html.GetEnumSelectList<Elomoas.Domain.Entities.Enums.FriendshipStatus>()">
                        <option value="">-- Select Status --</option>
                    </select>
                    <span asp-validation-for="Status" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        $(document).ready(function() {
            $('.form-control').select2();
        });
    </script>
} 