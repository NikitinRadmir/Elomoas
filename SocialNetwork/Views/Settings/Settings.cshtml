@using Elomoas.Helpers
@using Microsoft.AspNetCore.Mvc.Localization
@using System.Globalization
@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = @Localizer["Settings"];
}
<div class="middle-sidebar-bottom bg-lightblue theme-dark-bg">
    <div class="middle-sidebar-left">
        <div class="middle-wrap">
            <div class="card w-100 border-0 bg-white shadow-xs p-0 mb-4">

                <div class="card-body p-lg-5 p-4 w-100 border-0">
                    <div class="row">
                        <div class="col-lg-12">
                            <h4 class="mb-4 font-lg fw-700 mont-font mb-5">@Localizer["Settings"]</h4>
                            <div class="nav-caption fw-600 font-xssss text-grey-500 mb-2">@Localizer["Genaral"]</div>
                            <ul class="list-inline mb-4">
                                <li class="list-inline-item d-block border-bottom mr-0"><a asp-controller="Settings" asp-action="AccountInfo" class="pt-2 pb-2 d-flex"><i class="btn-round-md bg-primary-gradiant text-white feather-home font-md mr-3"></i> <h4 class="fw-600 font-xssss mb-0 mt-3">@Localizer["AcountInformation"]</h4><i class="ti-angle-right font-xsss text-grey-500 ml-auto mt-3"></i></a></li>
                            </ul>

                            <div class="nav-caption fw-600 font-xssss text-grey-500 mb-2">@Localizer["Acount"]</div>
                            <ul class="list-inline mb-4">
                                <li class="list-inline-item d-block  mr-0"><a asp-controller ="Settings" asp-action="Password" class="pt-2 pb-2 d-flex"><i class="btn-round-md bg-blue-gradiant text-white feather-inbox font-md mr-3"></i> <h4 class="fw-600 font-xssss mb-0 mt-3">@Localizer["Password"]</h4><i class="ti-angle-right font-xsss text-grey-500 ml-auto mt-3"></i></a></li>
                            </ul>

                            <div class="nav-caption fw-600 font-xssss text-grey-500 mb-2">@Localizer["Other"]</div>
                            <ul class="list-inline">
                                <li class="list-inline-item d-block mr-0">
                                    <form asp-controller="Settings" asp-action="Logout" method="post">
                                        <button type="submit" class="pt-2 pb-2 d-flex w-100 border-0 bg-transparent">
                                            <i class="btn-round-md bg-red-gradiant text-white feather-lock font-md mr-3"></i>
                                            <h4 class="fw-600 font-xssss mb-0 mt-3">@Localizer["Logout"]</h4>
                                            <i class="ti-angle-right font-xsss text-grey-500 ml-auto mt-3"></i>
                                        </button>
                                    </form>
                                </li>
                            </ul>
                        </div>
                    </div>


                </div>
            </div>

        </div>
    </div>
</div> 